{
  "manifest_version": 3,
  "name": "Paperless-ngx Upload",
  "version": "0.8.3",
  "description": "Upload Emails and attachments directly to Paperless-ngx from Thunderbird",
  "browser_specific_settings": {
    "gecko": {
      "id": "@paperless-upload.stemabu",
      "strict_min_version": "140.0"
    }
  },
  "permissions": [
    "messagesRead",
    "messagesUpdate",
    "accountsRead",
    "messagesTags",
    "messagesTagsList",
    "menus",
    "notifications",
    "storage"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "utils.js",
      "background.js"
    ]
  },
  "message_display_action": {
    "default_title": "Paperless Upload",
    "default_popup": "message-display-popup.html",
    "default_icon": "icons/icon-32.png"
  },
  "action": {
    "default_title": "Paperless Upload",
    "default_popup": "popup.html",
    "default_icon": "icons/icon-32.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "128": "icons/icon-128.png",
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  }
}
